<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavDrawerSectionStyle">
        <item name="android:background">@color/purple_dark</item>
    </style>

    <style name="NavDrawerSectionStyle.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="NavDrawerItemStyle">
        <item name="android:background">?activatedBackgroundIndicator</item>
        <item name="android:textAppearance">?textAppearanceMedium</item>
    </style>

    <style name="NavDrawerItemStyle.TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="NavDrawerFacebookStyle">
        <item name="android:gravity">center</item>
    </style>


    <style name="NavDrawerFacebookProfileStyle">
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="NavDrawerFacebookProfileTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>