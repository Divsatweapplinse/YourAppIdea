<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="@style/NavDrawerFacebookProfileStyle">

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/navmenu_fb_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/navmenu_fb_profile_firstName"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/navmenu_fb_profile_picture"
        style="@style/NavDrawerFacebookProfileTextStyle"/>

    <com.facebook.widget.LoginButton
        android:id="@+id/navmenufacebook_loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/navmenu_fb_profile_picture"
        android:layout_below="@id/navmenu_fb_profile_firstName"/>

</RelativeLayout>
